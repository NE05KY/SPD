source 'https://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'annotate'
gem 'gravatar_image_tag'
gem 'bcrypt-ruby', '~> 3.0.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'zurb-foundation'
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
	gem 'sqlite3'
end

group :production do
	gem 'pg'
end