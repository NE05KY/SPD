<% provide(:title, 'Teachers') %>

<% @teachers.in_groups_of(3, false) do |row_teacher| %>
<div class="row">
	<% row_teacher.each do |teacher| %>
	<div class="large-4 columns">
		<div class="panel teachers">
			<%= link_to teacher do %>
			<%= gravatar_image_tag teacher.email, title: teacher.sname, :gravatar =>
			{ filetype: :png, size: 88 } %>
			<div class="info">
				<h6>
					<%= teacher.fname %>
					<%= teacher.sname %></h6>
				<p>
					<%= teacher.position %></p>
			</div>
			<% end %></div>
	</div>
	<% end %>
</div>
<% end %>